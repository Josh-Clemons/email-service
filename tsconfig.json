{
  "compilerOptions": {
    "target": "ES2020",                      // Use ES2020 features
    "useDefineForClassFields": true,          // For using the correct semantics for class fields
    "module": "ESNext",                       // Use ESNext for modern module system
    "lib": ["ES2020", "DOM", "DOM.Iterable"], // Standard lib files
    "skipLibCheck": true,                     // Skip type checking of declaration files for faster build

    /* Bundler mode */
    "moduleResolution": "node",               // Use Node.js module resolution (for `require()` and `import`)
    "allowImportingTsExtensions": true,       // Allow importing TypeScript files with extensions
    "isolatedModules": true,                  // Ensure isolated modules for Vite compatibility
    "moduleDetection": "force",               // Force detection of modules
    "noEmit": true,                           // Don't emit JS (Vite handles the bundling)

    /* Linting */
    "strict": true,                           // Enable strict mode for better type safety
    "noUnusedLocals": true,                   // Throw error if there are unused local variables
    "noUnusedParameters": true,               // Throw error if there are unused function parameters
    "noFallthroughCasesInSwitch": true,       // Prevent fallthrough in switch statements
    "noUncheckedSideEffectImports": true,     // Prevent importing modules with unchecked side effects
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"],                         // Include all files from the 'src' directory
  "exclude": ["node_modules"]                 // Exclude node_modules folder
}
