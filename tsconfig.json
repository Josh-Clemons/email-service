{
  "compilerOptions": {
    "target": "ES2020",                       // Use ES2020 features
    "useDefineForClassFields": true,          // For using the correct semantics for class fields
    "module": "ESNext",                       // Use ESNext for modern module system
    "lib": ["ES2020", "DOM", "DOM.Iterable"], // Standard lib files
    "skipLibCheck": true,                     // Skip type checking of declaration files for faster build

    /* Bundler mode */
    "moduleResolution": "node",               // Use Node.js module resolution (for `require()` and `import`)
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": false,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
